@page
@model RazorPagesMovie.Pages.Movies.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<form>
    <p>
        <select asp-for="MovieGenre" asp-items="Model.Genres">
            <option value="">All</option>
        </select>
        
        Title: <input type="text" asp-for="SearchString"/>
        <input type="submit" value="Filter"/>
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Movie[0].Hersteller)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movie[0].Bauhjahr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movie[0].Leistung)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movie[0].Preis)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movie[0].SitzPlaetze)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Movie) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Hersteller)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bauhjahr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Leistung)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Preis)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SitzPlaetze)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
